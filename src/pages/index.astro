---
import Layout from "../layouts/Layout.astro";

import Header from "@/components/Header.astro";
import Hero from "@/components/Hero.astro";
import Services from "@/components/Services.astro";
import Clients from "@/components/Clients.astro";
import About from "@/components/About.astro";
import Integration from "@/components/Integration.astro";
import Contact from "@/components/Contact.astro";
import Footer from "@/components/Footer.astro";
---

<Layout class="min-h-screen bg-ivory justify-center items-center">
  <div class="px-64 space-y-12 mb-22">
    <Header />
    <div class="space-y-44">
      <Hero />
      <Services />
      <Clients />
      <About />
      <Integration />
      <Contact />
    </div>
  </div>
  <Footer />
</Layout>
