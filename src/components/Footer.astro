---
const socials = [
  {
    id_social: "instagram",
    icon_social: "/icons/socials/instagram.svg",
    alt_social: "instagram",
  },
  {
    id_social: "whatsapp",
    icon_social: "/icons/socials/whatsapp.svg",
    alt_social: "whatsapp",
  },
  {
    id_social: "telegram",
    icon_social: "/icons/socials/telegram.svg",
    alt_social: "telegram",
  },
  {
    id_social: "facebook",
    icon_social: "/icons/socials/facebook.svg",
    alt_social: "facebook",
  },
  {
    id_social: "tiktok",
    icon_social: "/icons/socials/tiktok.svg",
    alt_social: "tiktok",
  },
];
---

<footer
  class="bg-[#335A83] font-sagace px-16 py-12 flex items-center justify-between"
>
  <div class="space-y-4">
    <img src="/assets/logo-footer.webp" alt="logo" class="w-auto h-10" />
    <span class="text-[#B0DDFE] italic">¡Somos alquimistas digitales!</span>
  </div>
  <div id="socials" class="flex gap-6">
    {
      socials.map((social) => (
        <a href="" id={social.id_social}>
          <img
            src={social.icon_social}
            class="w-10 h-10 bg-white"
            alt={social.alt_social}
          />
        </a>
      ))
    }
  </div>
  <div class="flex flex-col justify-end items-end">
    <span class="font-medium text-white text-lg">Santa Anita - Lima, Perú</span>
    <span class="text-[#B0DDFE] font-medium text-lg"
      >987 826 182 - 966 761 455</span
    >
    <span class="mt-4 font-light text-white text-sm"
      >GeekCorp©. Todos los derechos reservados {
        new Date().getFullYear()
      }</span
    >
  </div>
</footer>
